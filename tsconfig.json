{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "allowJs": false,
    "outDir": "./built" /* Redirect output structure to the directory. */,
    "rootDir": "./src",
    "strict": true,
    "alwaysStrict": true /* Parse in strict mode and emit "use strict" for each source file. */,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
